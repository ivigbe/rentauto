<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="ar.edu.unq.epers.model.Ubicacion" table="UBICACION">
		<id name="ubicacionId" type="java.lang.Integer">
			<generator class="identity" />
		</id>

		<property name="nombre" type="string"></property>
        
        <subclass name="ar.edu.unq.epers.model.UbicacionVirtual" extends="ar.edu.unq.epers.model.Ubicacion" discriminator-value="UbicacionVirtual">
        	<key column="virtual_id" />
        	
        <bag name="ubicaciones" inverse="true" cascade="save-update">
        	<key column="ubicacion_id" />
        	<one-to-many class="ar.edu.unq.epers.model.Ubicacion" />
        </bag>
        	
        </subclass>

	</class>
</hibernate-mapping>