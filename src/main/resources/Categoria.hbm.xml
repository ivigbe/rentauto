<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="ar.edu.unq.epers.model.Categoria" table="CATEGORIA">
		<id name="categoriaId" type="java.lang.Integer">
			<generator class="identity" />
		</id>

		<property name="nombre" type="string"></property>
		<discriminator column="Tipo"></discriminator>
		
		<!-- PREGUNTAR LO DE LAS SUBCLASES DE CATEGORIA, QUE ESTAN DENTRO DEL MISMO ARCHIVO JAVA DE LA SUPERCLASE -->
		
		<subclass name="ar.edu.unq.epers.model.Turismo" extends="ar.edu.unq.epers.model.Categoria" discriminator-value="Turismo"></subclass>
        
        <subclass name="ar.edu.unq.epers.model.Familiar" extends="ar.edu.unq.epers.model.Categoria" discriminator-value="Familiar"></subclass>
        
        <subclass name="ar.edu.unq.epers.model.Deportivo" extends="ar.edu.unq.epers.model.Categoria" discriminator-value="Deportivo"></subclass>

		<subclass name="ar.edu.unq.epers.model.TodoTerreno" extends="ar.edu.unq.epers.model.Categoria" discriminator-value="TodoTerreno"></subclass>
	</class>
</hibernate-mapping>